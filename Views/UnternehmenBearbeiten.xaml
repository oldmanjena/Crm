<fluent:RibbonWindow
    x:Class="Crm.Views.UnternehmenBearbeiten"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:fluent="urn:fluent-ribbon"
    Title="Unternehmen bearbeiten"
    Width="500"
    Height="400"
    WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Titel  -->
        <TextBlock
            Margin="0,0,0,20"
            FontSize="20"
            FontWeight="Bold"
            Text="Unternehmensdaten bearbeiten" />

        <!--  Firmenname  -->
        <StackPanel
            Grid.Row="1"
            Margin="0,10,0,0"
            Orientation="Vertical">
            <TextBlock Text="Firmenname:" />
            <TextBox Text="{Binding Firmenname, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <!--  Telefonnummer  -->
        <StackPanel
            Grid.Row="2"
            Margin="0,10,0,0"
            Orientation="Vertical">
            <TextBlock Text="Telefonnummer:" />
            <TextBox Text="{Binding Telefonnummer, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <!--  Webseite  -->
        <StackPanel
            Grid.Row="3"
            Margin="0,10,0,0"
            Orientation="Vertical">
            <TextBlock Text="Webseite:" />
            <TextBox Text="{Binding Webseite, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <!--  Buttons  -->
        <StackPanel
            Grid.Row="5"
            Width="181"
            Margin="0,30,0,49"
            HorizontalAlignment="Center"
            Orientation="Horizontal">

            <fluent:Button
                Width="100"
                Margin="5"
                Click="Speichern_Click"
                Content="Speichern"
                SizeDefinition="Large">
                <fluent:Button.Icon>
                    <Image
                        Width="16"
                        Height="16"
                        Source="/Assets/save.png" />
                </fluent:Button.Icon>
            </fluent:Button>
            <fluent:Button
                Width="62"
                Margin="5"
                Click="Abbrechen_Click"
                Content="Abbrechen"
                SizeDefinition="Large">
                <fluent:Button.Icon>
                    <Image
                        Width="16"
                        Height="16"
                        Source="/Assets/cancel.png" />
                </fluent:Button.Icon>
            </fluent:Button>
        </StackPanel>
    </Grid>
</fluent:RibbonWindow>