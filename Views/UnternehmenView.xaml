<UserControl
    x:Class="Crm.Views.UnternehmenView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fluent="urn:fluent-ribbon"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Titel  -->
        <TextBlock
            Margin="0,0,0,15"
            FontSize="26"
            FontWeight="Bold"
            Text="Unternehmen verwalten" />

        <!--  Unternehmensliste in GroupBox  -->
        <GroupBox
            Grid.Row="1"
            Padding="10"
            BorderBrush="#DDD"
            BorderThickness="1"
            FontWeight="SemiBold"
            Header="Unternehmensliste">
            <ListView
                x:Name="UnternehmenListView"
                MinHeight="300"
                DisplayMemberPath="Firmenname"
                ItemsSource="{Binding UnternehmenListe}"
                SelectedItem="{Binding AusgewaehltesUnternehmen, Mode=TwoWay}" />
        </GroupBox>

        <!--  Buttons  -->
        <StackPanel
            Grid.Row="2"
            Margin="0,15,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="160"
                Margin="5"
                Padding="10,5"
                Command="{Binding OpenUnternehmenWizardCommand}"
                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Width="16"
                        Height="16"
                        Margin="0,0,5,0"
                        Source="/Assets/plus.png" />
                    <TextBlock Text="Neues Unternehmen" />
                </StackPanel>
            </Button>

            <Button
                Width="180"
                Margin="5"
                Padding="10,5"
                Command="{Binding OpenAbteilungErfassenCommand}"
                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Width="16"
                        Height="16"
                        Margin="0,0,5,0"
                        Source="/Assets/edit.png" />
                    <TextBlock Text="Abteilungen bearbeiten" />
                </StackPanel>
            </Button>
            <Button
                Width="150"
                Margin="5"
                Command="{Binding BearbeiteUnternehmenCommand}"
                Content="Bearbeiten" />
            <Button
                Width="150"
                Margin="5"
                Click="ÖffneAnUnternehmen_Click"
                Content="Anzeigen" />
        </StackPanel>
    </Grid>
</UserControl>