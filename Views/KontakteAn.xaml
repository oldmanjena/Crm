<Window
    x:Class="Crm.Views.KontakteAn"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Crm.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="KontakteAn"
    Width="950"
    Height="550"
    mc:Ignorable="d">
    <DockPanel>

        <!--  Obere Leiste (Ribbon-ähnlich)  -->
        <ToolBar DockPanel.Dock="Top">
            <Button
                Width="60"
                Margin="5"
                Content="Neu" />
            <Button
                Width="80"
                Margin="5"
                Content="Bearbeiten" />
            <Button
                Width="80"
                Margin="5"
                Content="Löschen" />
            <Separator />
            <Button
                Width="80"
                Margin="5"
                Content="Suchen" />
        </ToolBar>

        <!--  Linke Navigation  -->
        <TreeView
            Width="200"
            Margin="5"
            DockPanel.Dock="Left">
            <TreeViewItem Header="Projekt">
                <TreeViewItem Header="Firmen" />
                <TreeViewItem Header="Kontakte" />
                <TreeViewItem Header="Aktivitäten" />
                <TreeViewItem Header="Adressen" />
            </TreeViewItem>
        </TreeView>

        <!--  Hauptbereich: Tabs  -->
        <TabControl Margin="5">
            <TabItem Header="Kontakte">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  Stammdaten-Formular  -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="200" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="5"
                            Text="Anrede:" />
                        <ComboBox
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="5">
                            <ComboBoxItem Content="Herr" />
                            <ComboBoxItem Content="Frau" />
                        </ComboBox>

                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="2"
                            Margin="5"
                            Text="Titel:" />
                        <TextBox
                            Grid.Row="0"
                            Grid.Column="3"
                            Margin="5" />

                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="5"
                            Text="Name:" />
                        <TextBox
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="5" />

                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="2"
                            Margin="5"
                            Text="Vorname:" />
                        <TextBox
                            Grid.Row="1"
                            Grid.Column="3"
                            Margin="5" />

                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="5"
                            Text="Position:" />
                        <TextBox
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="5" />

                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="2"
                            Margin="5"
                            Text="Abteilung:" />
                        <TextBox
                            Grid.Row="2"
                            Grid.Column="3"
                            Margin="5" />

                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="5"
                            Text="KundeNr:" />
                        <TextBox
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="5" />

                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="2"
                            Margin="5"
                            Text="VK-Gebiet:" />
                        <TextBox
                            Grid.Row="3"
                            Grid.Column="3"
                            Margin="5" />
                    </Grid>

                    <!--  Aktivitäten-Tabelle  -->
                    <DataGrid
                        Grid.Row="1"
                        Height="300"
                        Margin="0,10,0,0"
                        AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Datum}"
                                Header="Datum/Zeit" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Typ}"
                                Header="Typ" />
                            <DataGridTextColumn
                                Width="2*"
                                Binding="{Binding Kommentar}"
                                Header="Kommentar" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Verantwortlich}"
                                Header="Verantwortlich" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Prioritaet}"
                                Header="Priorität" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>